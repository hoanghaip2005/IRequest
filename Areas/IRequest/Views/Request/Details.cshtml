@using System.Security.Claims
@model App.Models.IRequest.Request

@{
    ViewData["Title"] = "Thông Tin Chi Tiết Yêu Cầu";
    var stepHistories = ViewBag.StepHistories as List<App.Models.IRequest.RequestStepHistory>;
}

<div class="container-fluid">
    <div class="row mt-4" style="font-size: 1.2rem;">
        <div class="mx-2">
            <span>Home</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["controller"]</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["action"]</span>
        </div>
    </div>
    <div class="row">
        <h1 class="p-3 mt-0">@ViewData["Title"]</h1>
    </div>
    <div class="row mb-4 mx-3"> 
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.AttachmentURL)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.AttachmentURL)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IsApproved)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IsApproved)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Status.StatusName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Priority)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Priority.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Workflow)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Workflow.WorkflowName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ClosedAt)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ClosedAt)
            </dd>
            <dt class="col-sm-2">Request ID</dt>
            <dd class="col-sm-10">@Model.RequestID</dd>
        </dl>
    </div>
    <div class="md-4 mx-4">
        @if (Model.AssignedUserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
        {
            <form asp-action="MoveToNextStep" method="post" class="d-inline">
                <input type="hidden" name="requestId" value="@Model.RequestID" />
                <textarea name="note" placeholder="Nhận xét..." class="form-control mb-2"></textarea>
                <button type="submit" class="btn btn-primary">Chuyển bước</button>
            </form>
            <form asp-action="ApproveRequest" method="post" class="d-inline">
                <input type="hidden" name="requestId" value="@Model.RequestID" />
                <button type="submit" class="btn btn-success">Approve</button>
            </form>
        }
        <a asp-action="Edit" asp-route-id="@Model?.RequestID" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
    <div class="row mt-4">
        <h2>Lịch sử bước</h2>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Bước</th>
                    <th>Người thực hiện</th>
                    <th>Thời gian</th>
                    <th>Nhận xét</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var h in stepHistories)
            {
                <tr>
                    <td>@h.StepOrder</td>
                    <td>@h.ActionByUserId</td>
                    <td>@h.ActionTime</td>
                    <td>@h.Note</td>
                    <td>@h.StatusID</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
