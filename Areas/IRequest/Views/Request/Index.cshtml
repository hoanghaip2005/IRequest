                                                    <i class="fa-regular fa-user-circle fa-lg"></i>
                                                </div>
                                                <div>
                                                    <b>@comment.User.UserName</b>
                                                    @if (comment.User?.Department != null)
                                                    {
                                                        <span class="badge bg-info text-dark ms-2" style="font-size:11px;">
                                                            @comment.User.Department.Name
                                                        </span>
                                                    }
                                                    <span class="text-muted ms-2" style="font-size:12px;">
                                                        @{
                                                            var commentDate = TimeZoneInfo.ConvertTimeFromUtc(DateTime.SpecifyKind(comment.CreatedAt, DateTimeKind.Utc), vnTimeZone);
                                                            @commentDate.ToString("dd/MM/yyyy HH:mm:ss")
                                                        }
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="comment-text ms-4">@comment.Content</div>
                                        </div>
                                    }
                                }
