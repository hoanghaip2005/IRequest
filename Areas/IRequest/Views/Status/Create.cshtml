@model App.Models.IRequest.Status

@{
    ViewData["Title"] = "Tạo trạng thái mới";
}

<div class="container-fluid">
    <div class="row mt-4" style="font-size: 1.2rem;">
        <div class="mx-3">
            <span>Home</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["controller"]</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["action"]</span>
        </div>
    </div>
    <div class="row md-4"></div>
        <h1 class="p-3 mt-0">@ViewData["Title"]</h1>
    </div>
    <div class="row md-4 mx-3">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="StatusName" class="control-label mb-1"></label>
                    <input asp-for="StatusName" class="form-control" />
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>
                <div class="form-group mb-1">
                    <label asp-for="Description" class="control-label mb-1"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-4 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFinal" /> @Html.DisplayNameFor(model => model.IsFinal)
                    </label>
                </div>
                <div class="col-md-12 d-flex justify-content-start">
                    <button class="btn btn-primary mb-3" type="submit" value="Create" class="btn btn-primary">
                        Tạo mới
                    </button>
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index" class="text-decoration-none">Back to List</a>
        </div>
    </div>
</div>

