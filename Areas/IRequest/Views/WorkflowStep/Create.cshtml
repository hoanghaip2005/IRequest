@model App.Models.IRequest.WorkflowStep

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StepName" class="control-label"></label>
                <input asp-for="StepName" class="form-control" />
                <span asp-validation-for="StepName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkflowID" class="control-label"></label>
                <select asp-for="WorkflowID" class ="form-control" asp-items="ViewBag.WorkflowID"></select>
            </div>
            <div class="form-group">
                <label asp-for="StepOrder" class="control-label"></label>
                <input asp-for="StepOrder" class="form-control" />
                <span asp-validation-for="StepOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredRoleId" class="control-label"></label>
                <select asp-for="RequiredRoleId" class="form-control" asp-items="ViewBag.RequiredRoleId"></select>
                <span asp-validation-for="RequiredRoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedUserId" class="control-label"></label>
                <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.AssignedUserId"></select>
                <span asp-validation-for="AssignedUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeLimitHours" class="control-label"></label>
                <input asp-for="TimeLimitHours" class="form-control" />
                <span asp-validation-for="TimeLimitHours" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ApprovalRequired" /> @Html.DisplayNameFor(model => model.ApprovalRequired)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="StatusID" class="control-label"></label>
                <select asp-for="StatusID" class ="form-control" asp-items="ViewBag.StatusID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

