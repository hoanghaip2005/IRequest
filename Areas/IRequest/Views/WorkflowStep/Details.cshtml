@model App.Models.IRequest.WorkflowStep

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row mt-4" style="font-size: 1.2rem;">
        <div class="mx-2">
            <span>Home</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["controller"]</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["action"]</span>
        </div>
    </div>
    <div class="row">
        <h1 class="p-3 mt-0">@ViewData["Title"]</h1>
    </div>
    <div class="row mb-4 mx-3"> 
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StepName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StepName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Workflow)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Workflow.WorkflowName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StepOrder)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StepOrder)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TimeLimitHours)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TimeLimitHours)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ApprovalRequired)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ApprovalRequired)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.statsus)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.statsus.StatusName)
            </dd>
        </dl>
    </div>
    <div class="md-4 mx-4">
        <a asp-action="Edit" asp-route-id="@Model?.StatusID" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>