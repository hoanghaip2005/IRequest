@model App.Models.IRequest.WorkflowStep

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="row mt-4" style="font-size: 1.2rem;">
        <div class="mx-3">
            <span>Home</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["controller"]</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["action"]</span>
        </div>
    </div>
    <div class="row md-4"></div>
        <h1 class="p-3 mt-0">@ViewData["Title"]</h1>
    </div>
    <div class="row md-4 mx-3">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StepID" />
                <div class="form-group mb-4">
                    <label asp-for="StepName" class="control-label mb-1"></label>
                    <input asp-for="StepName" class="form-control" />
                    <span asp-validation-for="StepName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="WorkflowID" class="control-label mb-1"></label>
                    <select asp-for="WorkflowID" class="form-control" asp-items="ViewBag.WorkflowID"></select>
                    <span asp-validation-for="WorkflowID" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="StepOrder" class="control-label mb-1"></label>
                    <input asp-for="StepOrder" class="form-control" />
                    <span asp-validation-for="StepOrder" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="AssignedUserId" class="control-label mb-1"></label>
                    <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.AssignedUserId"></select>
                    <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="TimeLimitHours" class="control-label mb-1"></label>
                    <input asp-for="TimeLimitHours" class="form-control" />
                    <span asp-validation-for="TimeLimitHours" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ApprovalRequired" /> @Html.DisplayNameFor(model => model.ApprovalRequired)
                    </label>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="StatusID" class="control-label mb-1"></label>
                    <select asp-for="StatusID" class="form-control" asp-items="ViewBag.StatusID"></select>
                    <span asp-validation-for="StatusID" class="text-danger"></span>
                </div>
                <div class="col-md-12 d-flex justify-content-start">
                    <button class="btn btn-primary mb-3" type="submit" class="btn btn-primary">
                        LÆ°u
                    </button>
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index" class="text-decoration-none">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


