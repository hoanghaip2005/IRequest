@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager
    
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideIn {
        from {
            transform: translateX(-20px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    .login-page {
        height: 100vh;
        background: url('/images/UMT/umt.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
        overflow: hidden;
        animation: fadeIn 1s ease-out;
    }

    .login-page::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(8px);
    }

    .login-container {
        position: relative;
        z-index: 1;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 32px;
        width: 100%;
        max-width: 400px;
        max-height: 90vh;
        backdrop-filter: blur(10px);
        overflow-y: auto;
        animation: fadeIn 0.8s ease-out;
    }

    .login-logo {
        height: 60px;
        margin-bottom: 16px;
        transition: transform 0.3s ease;
        animation: slideIn 0.8s ease-out;
    }

    .login-logo:hover {
        transform: scale(1.05) rotate(2deg);
    }

    .login-title {
        font-size: 24px;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 4px;
        animation: slideIn 0.8s ease-out 0.2s backwards;
    }

    .login-subtitle {
        color: #718096;
        margin-bottom: 24px;
        animation: slideIn 0.8s ease-out 0.3s backwards;
    }

    .form-group {
        margin-bottom: 16px;
    }

    .form-control {
        border-radius: 12px;
        padding: 10px 14px;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        animation: slideIn 0.8s ease-out 0.4s backwards;
    }

    .form-control:focus {
        border-color: #4299e1;
        box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.1);
        background: white;
        transform: translateY(-2px);
    }

    .btn-login {
        background: #4299e1;
        color: white;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        width: 100%;
        animation: slideIn 0.8s ease-out 0.5s backwards;
    }

    .btn-login:hover {
        background: #3182ce;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(66, 153, 225, 0.2);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .forgot-password, .register-link {
        color: #4299e1;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
    }

    .forgot-password::after, .register-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #4299e1;
        transition: width 0.3s ease;
    }

    .forgot-password:hover::after, .register-link:hover::after {
        width: 100%;
    }

    .forgot-password:hover, .register-link:hover {
        color: #3182ce;
        transform: translateY(-1px);
    }

    .checkbox-container {
        display: flex;
        align-items: center;
        gap: 8px;
        animation: slideIn 0.8s ease-out 0.4s backwards;
    }

    .checkbox-container input[type="checkbox"] {
        width: 18px;
        height: 18px;
        border-radius: 4px;
        border: 2px solid #e2e8f0;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .checkbox-container input[type="checkbox"]:checked {
        background-color: #4299e1;
        border-color: #4299e1;
    }

    .checkbox-container label {
        color: #4a5568;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .checkbox-container:hover label {
        color: #4299e1;
    }

    .social-login {
        margin-top: 24px;
        padding-top: 24px;
        border-top: 1px solid #e2e8f0;
    }

    .social-login-title {
        color: #4a5568;
        font-size: 16px;
        margin-bottom: 16px;
    }

    .social-buttons {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 8px;
    }

    .social-btn {
        padding: 10px;
        border-radius: 12px;
        border: 2px solid #e2e8f0;
        background: white;
        color: #4a5568;
        font-weight: 500;
        transition: all 0.3s ease;
        animation: slideIn 0.8s ease-out 0.6s backwards;
    }

    .social-btn:hover {
        background: #f7fafc;
        border-color: #4299e1;
        color: #4299e1;
        transform: translateY(-2px) scale(1.02);
    }

    @@media (max-width: 576px) {
        .login-card {
            padding: 24px;
            max-height: 95vh;
        }
        
        .login-logo {
            height: 50px;
        }
        
        .login-title {
            font-size: 20px;
        }
    }

    /* Thêm style cho password toggle */
    .password-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: #718096;
        padding: 5px;
        transition: color 0.3s ease;
    }

    .password-toggle:hover {
        color: #4299e1;
    }

    .password-toggle i {
        font-size: 16px;
    }

    .form-control.password-input {
        padding-right: 40px;
    }
</style>

<!-- Thêm Font Awesome vào head -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="text-center mb-4">
                <img src="/images/UMT/iRequest.png" alt="Logo" class="login-logo" style="height: 60px; width: auto;" />
            </div>
            <div class="text-center mb-4">
                <h1 class="login-title">Welcome Back!</h1>
                <p class="login-subtitle">Enter your credentials to access your account</p>
            </div>
            
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]"
                method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-4">
                    <label asp-for="UserNameOrEmail" class="form-label">Username or Email</label>
                    <input asp-for="UserNameOrEmail" class="form-control" placeholder="Enter your username or email" />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="password-container">
                        <input asp-for="Password" type="password" class="form-control password-input" placeholder="Enter your password" />
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="checkbox-container">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe">Remember me</label>
                        </div>
                        <a asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                    </div>
                </div>
                
                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-login">Sign In</button>
                </div>
                
                <div class="text-center">
                    <p class="mb-0">Don't have an account? 
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="register-link">
                            Sign Up
                        </a>
                    </p>
                </div>
            </form>

            @{
                var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                var loginProviders = schemes.ToList();
                if (loginProviders.Count > 0)
                {
                    <div class="social-login">
                        <h4 class="social-login-title text-center">Or continue with</h4>
                        <form asp-controller="Account" asp-action="ExternalLogin"
                            asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal"
                            role="form">
                            <div class="social-buttons">
                                @foreach (var provider in loginProviders)
                                {
                                    <button type="submit" class="social-btn" name="provider" value="@provider.Name"
                                        title="Log in using your @provider.Name account">
                                        <i class="fab fa-@provider.Name.ToLower()"></i> @provider.Name
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Thêm script để xử lý toggle password -->
<script>
function togglePassword() {
    const passwordInput = document.querySelector('.password-input');
    const toggleButton = document.querySelector('.password-toggle i');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleButton.classList.remove('fa-eye');
        toggleButton.classList.add('fa-eye-slash');
    } else {
        passwordInput.type = 'password';
        toggleButton.classList.remove('fa-eye-slash');
        toggleButton.classList.add('fa-eye');
    }
}
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
