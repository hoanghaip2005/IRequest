@model AddUserRoleModel
@{
    ViewData["Title"] = "Gán role";
}

<div class="container-fluid">
    <div class="row mt-4" style="font-size: 1.2rem;">
        <div class="mx-2">
            <span>Home</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["controller"]</span>
            <span> / </span>
            <span>@ViewContext.RouteData.Values["action"]</span>
        </div>
    </div>
    <div class="row">
        <h1 class="p-3 mt-0">@ViewData["Title"]</h1>
        <h4 class="p-3 mt-0">Thiết lập role cho user: @Model.user.UserName</h4>
        <partial name="_StatusMessage" />
    </div>
<div class="row">
        <div class="col-md-8 col-lg-6 shadow-sm rounded-4 bg-white p-4">
            <h5 class="mb-4 text-primary fw-bold">Cập nhật vai trò cho người dùng</h5>

            <form id="set-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>

                <div class="mb-3">
                    <label asp-for="RoleNames" class="form-label fw-semibold">Chọn vai trò</label>
                    @Html.ListBoxFor(m => m.RoleNames, (IEnumerable<SelectListItem>)ViewBag.allRoles, new {
                    id = "id-select-roles",
                                    @class = "w-100",
                                    size = 5 // Cho hiện nhiều dòng
                                    })
                    <span asp-validation-for="RoleNames" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i> Cập nhật
                    </button>
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left-circle me-1"></i> Danh sách thành viên
                    </a>
                </div>
            </form>

            <hr class="my-4">

            <h6 class="fw-bold text-secondary">Các claim được kế thừa từ role:</h6>
            @if (Model.claimsInRole.Count > 0)
            {
                <ul class="list-group list-group-flush small mb-3">
                    @foreach (var claim in Model.claimsInRole)
                    {
                        <li class="list-group-item px-2 py-1">
                            <strong>@claim.ClaimType</strong>: @claim.ClaimValue
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted small">Không có claim nào từ role.</p>
            }

            <hr>

            <h6 class="fw-bold text-secondary">
                Các claim riêng
                <a asp-action="AddClaim" asp-route-userid="@Model.user.Id" class="ms-2 btn btn-sm btn-outline-primary">
                    + Thêm claim riêng
                </a>
            </h6>
            @if (Model.claimsInUserClaim.Count > 0)
            {
                <ul class="list-group list-group-flush small">
                    @foreach (var claim in Model.claimsInUserClaim)
                    {
                        <li class="list-group-item px-2 py-1">
                            <a asp-action="EditClaim" asp-route-claimid="@claim.Id" class="text-decoration-none">
                                <strong>@claim.ClaimType</strong>: @claim.ClaimValue
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted small">Chưa có claim riêng nào.</p>
            }
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
